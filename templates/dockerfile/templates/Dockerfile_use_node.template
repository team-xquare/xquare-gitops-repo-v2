{%- if builder == "node" %}
FROM node:{{ node_version }} as build

{% for command in build_commands %}
RUN {{ command }}
{% endfor %}

COPY . .

FROM node:{{ node_version }}

COPY --from=build . .

EXPOSE {{ port }}

{%- if command %}
CMD [
  {%- for arg in command.split() %}
  {%- if not loop.first %}, {% endif %}"{{ arg }}"
  {%- endfor %}]
{%- endif %}

{%- endif %}
